apiVersion: v1
kind: Pod
metadata:
  creationTimestamp: null
  labels:
    run: deployment
  name: deployment
spec:
  containers:
  - args:
    - secret-deployment
    image: giovana02/sosmed
    name: deployment
    resources: {}
    env:
      - name: DB_HOST
        valueFrom:
          configMapKeyRef:
            name: config-sosmed
            key: DB_HOST
      - name: DB_NAME
        valueFrom:
          configMapKeyRef:
            name: config-sosmed
            key: DB_NAME
      - name: DB_PASSWORD
        valueFrom:
          configMapKeyRef:
            name: secret-sosmed
            key: DB_PASSWORD
      - name: DB_USERNAME
        valueFrom:
          configMapKeyRef:
            name: secret-sosmed
            key: DB_USERNAME
  dnsPolicy: ClusterFirst
  restartPolicy: Always
status: {}
